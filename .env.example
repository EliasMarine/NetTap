# NetTap Environment Configuration
# Copy to .env and modify as needed

# Management interface
MGMT_INTERFACE=eth2
MGMT_IP=192.168.1.100
MGMT_NETMASK=255.255.255.0

# Bridge interfaces
WAN_INTERFACE=eth0
LAN_INTERFACE=eth1

# Dashboard
NETTAP_HOSTNAME=nettap.local
DASHBOARD_PORT=443

# OpenSearch
OPENSEARCH_JAVA_OPTS="-Xms4g -Xmx4g"

# Storage retention (days)
RETENTION_HOT=90
RETENTION_WARM=180
RETENTION_COLD=30
DISK_THRESHOLD_PERCENT=80

# Alerting (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
ALERT_EMAIL=

WEBHOOK_URL=
