      "options": {
        "reduceOptions": {
          "calcs": ["sum"],
          "fields": "",
          "values": false
        },
        "pieType": "donut",
        "tooltip": {
          "mode": "single"
        },
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value", "percent"]
        }
      },
      "targets": [
        {
          "refId": "A",
          "datasource": {
            "type": "grafana-opensearch-datasource",
            "uid": "${DS_OPENSEARCH_ZEEK}"
          },
          "query": "",
          "alias": "",
          "metrics": [
            {
              "id": "1",
              "type": "count"
            }
          ],
          "bucketAggs": [
            {
              "id": "2",
              "type": "terms",
              "field": "service",
              "settings": {
                "size": "10",
                "order": "desc",
                "orderBy": "_count",
                "min_doc_count": "1"
              }
            }
          ],
          "timeField": "ts",
          "queryType": "lucene"
        }
      ]
    },
