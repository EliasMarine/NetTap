{
  "uid": "nettap-network-overview",
  "title": "Network Overview",
  "description": "NetTap home dashboard â€” bandwidth, connections, alerts, and protocol distribution at a glance.",
  "tags": ["nettap", "overview", "network"],
  "editable": true,
  "graphTooltip": 1,
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["10s", "30s", "1m", "5m", "15m"],
    "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d"]
  },
  "refresh": "30s",
  "schemaVersion": 39,
  "panels": [
    {
      "id": 1,
      "title": "Total Bandwidth (24h)",
      "type": "stat",
      "gridPos": { "x": 0, "y": 0, "w": 8, "h": 4 },
      "datasource": {
        "type": "grafana-opensearch-datasource",
        "uid": "${DS_OPENSEARCH_ZEEK}"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "decbytes",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "#73BF69", "value": null },
              { "color": "#FF9830", "value": 10737418240 },
              { "color": "#F2495C", "value": 107374182400 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": ["sum"],
          "fields": "",
          "values": false
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "targets": [
        {
          "refId": "A",
          "datasource": {
            "type": "grafana-opensearch-datasource",
            "uid": "${DS_OPENSEARCH_ZEEK}"
          },
          "query": "",
          "alias": "",
          "metrics": [
            {
              "id": "1",
              "type": "sum",
              "field": "orig_bytes"
            },
            {
              "id": "2",
              "type": "sum",
              "field": "resp_bytes"
            }
          ],
          "bucketAggs": [],
          "timeField": "ts",
          "queryType": "lucene"
        }
      ],
      "transformations": [
        {
          "id": "calculateField",
          "options": {
            "mode": "binary",
            "reduce": {
              "reducer": "sum"
            },
            "binary": {
              "left": "Sum orig_bytes",
              "operator": "+",
              "right": "Sum resp_bytes"
            },
            "alias": "Total Bytes"
          }
        }
      ]
    },
    {
      "id": 2,
      "title": "Active Connections (5m)",
      "type": "stat",
      "gridPos": { "x": 8, "y": 0, "w": 8, "h": 4 },
      "datasource": {
        "type": "grafana-opensearch-datasource",
        "uid": "${DS_OPENSEARCH_ZEEK}"
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "#73BF69", "value": null },
              { "color": "#FF9830", "value": 500 },
              { "color": "#F2495C", "value": 2000 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": ["sum"],
          "fields": "",
          "values": false
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "targets": [
        {
          "refId": "A",
          "datasource": {
            "type": "grafana-opensearch-datasource",
            "uid": "${DS_OPENSEARCH_ZEEK}"
          },
          "query": "ts:[now-5m TO now]",
          "alias": "",
          "metrics": [
            {
              "id": "1",
              "type": "count"
            }
          ],
          "bucketAggs": [],
          "timeField": "ts",
          "queryType": "lucene"
        }
      ]
    },
    {
      "id": 3,
      "title": "Active Alerts (24h)",
      "type": "stat",
      "gridPos": { "x": 16, "y": 0, "w": 8, "h": 4 },
      "datasource": {
        "type": "grafana-opensearch-datasource",
        "uid": "${DS_OPENSEARCH_SURICATA}"
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "#73BF69", "value": null },
              { "color": "#FF9830", "value": 10 },
              { "color": "#F2495C", "value": 50 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": ["sum"],
          "fields": "",
          "values": false
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "targets": [
        {
          "refId": "A",
          "datasource": {
            "type": "grafana-opensearch-datasource",
            "uid": "${DS_OPENSEARCH_SURICATA}"
          },
          "query": "event_type:alert AND timestamp:[now-24h TO now]",
          "alias": "",
          "metrics": [
            {
              "id": "1",
              "type": "count"
            }
          ],
          "bucketAggs": [],
          "timeField": "timestamp",
          "queryType": "lucene"
        }
      ]
    },
    {
      "id": 4,
      "title": "Bandwidth Over Time",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 4, "w": 24, "h": 8 },
      "datasource": {
        "type": "grafana-opensearch-datasource",
        "uid": "${DS_OPENSEARCH_ZEEK}"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "decbytes",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 20,
            "lineWidth": 2,
            "pointSize": 5,
            "showPoints": "never",
            "spanNulls": true,
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "scaleDistribution": {
              "type": "linear"
            },
            "stacking": {
              "mode": "none"
            },
            "gradientMode": "opacity"
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Sum orig_bytes" },
            "properties": [
              { "id": "displayName", "value": "Upload (orig_bytes)" },
              { "id": "color", "value": { "fixedColor": "#8AB8FF", "mode": "fixed" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Sum resp_bytes" },
            "properties": [
              { "id": "displayName", "value": "Download (resp_bytes)" },
              { "id": "color", "value": { "fixedColor": "#73BF69", "mode": "fixed" } }
            ]
          }
        ]
      },
      "options": {
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        },
        "legend": {
          "displayMode": "list",
          "placement": "bottom",
          "calcs": ["sum", "mean", "max"]
        }
      },
      "targets": [
        {
          "refId": "A",
          "datasource": {
            "type": "grafana-opensearch-datasource",
            "uid": "${DS_OPENSEARCH_ZEEK}"
          },
          "query": "",
          "alias": "",
          "metrics": [
            {
              "id": "1",
              "type": "sum",
              "field": "orig_bytes"
            },
            {
              "id": "2",
              "type": "sum",
              "field": "resp_bytes"
            }
          ],
          "bucketAggs": [
            {
              "id": "3",
              "type": "date_histogram",
              "field": "ts",
              "settings": {
                "interval": "auto",
                "min_doc_count": "0",
                "trimEdges": "0"
              }
            }
          ],
          "timeField": "ts",
          "queryType": "lucene"
        }
      ]
    },
    {
      "id": 5,
      "title": "Protocol Distribution",
      "type": "piechart",
      "gridPos": { "x": 0, "y": 12, "w": 8, "h": 8 },
      "datasource": {
        "type": "grafana-opensearch-datasource",
        "uid": "${DS_OPENSEARCH_ZEEK}"
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
